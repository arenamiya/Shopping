<% provide(:title, "User Profile") %>
<h1 style="text_align: center; background-color: #303030; bottom: 0; left: 0; right: 0; height: 240px; width: 100%;">
    <br>
    <div style="color: rgb(245, 245, 245);">
        <%= gravatar_for @customer %>
        <%= @customer.username %>
    </div>
    <br><br><br>
    <% if logged_in? %>
        <a style="font-size:20px; line-height: 240%;" href="/carts">pending orders</a>
        <div style="font-size:20px; line-height: 150%;"><%= link_to "update login details", edit_customer_path(current_customer) %></div>
        <a style="font-size:20px; line-height: 50%;" href="/carts">subscription</a><br>
        <div style="font-size:20px; line-height: 240%;"><%= link_to "log out", logout_path, method: :delete %></div>
    <% else %>
        <div style="font-size:20px">you are not logged in.   <%= link_to "log in?", login_path %></div>
    <% end %>
</h1>